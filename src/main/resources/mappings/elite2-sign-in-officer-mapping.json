{
  "request": {
    "method": "POST",
    "urlPattern": "/elite2api/users/login",
    "headers": {
      "Authorization": {
        "matches": "Bearer ([\\w\\d-_]+\\.)([\\w\\d-_]+\\.)([\\w\\d-_]+)"
      }
    },
    "bodyPatterns" : [
      { "equalToJson" : "{\"username\": \"officer\", \"password\": \"password\"}" }
    ]
  },
  "response": {
    "status": 200,
    "bodyFileName": "sign-in-response.json",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}